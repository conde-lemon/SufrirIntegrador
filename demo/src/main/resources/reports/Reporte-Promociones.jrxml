    <field name="fecha_extraccion" class="java.sql.Timestamp"/>
    <field name="activa" class="java.lang.Boolean"/>
    <field name="estado_promocion" class="java.lang.String"/>

    <variable name="total_promociones" class="java.lang.Integer" calculation="Count">
        <variableExpression><![CDATA[$F{id_oferta}]]></variableExpression>
    </variable>

    <variable name="promociones_vigentes" class="java.lang.Integer" calculation="Sum">
        <variableExpression><![CDATA[$F{estado_promocion}.equals("VIGENTE") ? 1 : 0]]></variableExpression>
    </variable>

    <variable name="promociones_expiradas" class="java.lang.Integer" calculation="Sum">
