<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="boleta-reserva"
              pageWidth="595"
              pageHeight="842"
              columnWidth="535"
              leftMargin="30"
              rightMargin="30"
              topMargin="20"
              bottomMargin="20">

    <parameter name="codigoReserva" class="java.lang.String"/>
    <parameter name="fechaEmision" class="java.util.Date"/>
    <parameter name="clienteNombre" class="java.lang.String"/>
    <parameter name="clienteEmail" class="java.lang.String"/>
    <parameter name="total" class="java.math.BigDecimal"/>
    <parameter name="moneda" class="java.lang.String"/>
    <parameter name="estado" class="java.lang.String"/>
    <parameter name="observaciones" class="java.lang.String"/>

    <title>
        <band height="150">
            <!-- Header con logo y título -->
            <rectangle>
                <reportElement x="0" y="0" width="535" height="80" backcolor="#7b1fa2"/>
                <graphicElement>
                    <pen lineWidth="0"/>
                </graphicElement>
            </rectangle>
            
            <staticText>
                <reportElement x="20" y="15" width="300" height="50" forecolor="#FFFFFF"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="Arial" size="28" isBold="true"/>
                </textElement>
                <text><![CDATA[TRAVEL FOR U]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="350" y="25" width="150" height="30" forecolor="#FFFFFF"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font fontName="Arial" size="16"/>
                </textElement>
                <text><![CDATA[BOLETA DE VIAJE]]></text>
            </staticText>
            
            <!-- Información de la boleta -->
            <staticText>
                <reportElement x="0" y="100" width="100" height="20"/>
                <textElement>
                    <font fontName="Arial" size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Código de Reserva:]]></text>
            </staticText>
            
            <textField>
                <reportElement x="110" y="100" width="200" height="20"/>
                <textElement>
                    <font fontName="Arial" size="12" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{codigoReserva}]]></textFieldExpression>
            </textField>
            
            <staticText>
                <reportElement x="350" y="100" width="80" height="20"/>
                <textElement>
                    <font fontName="Arial" size="10"/>
                </textElement>
                <text><![CDATA[Fecha de Emisión:]]></text>
            </staticText>
            
            <textField pattern="dd/MM/yyyy HH:mm">
                <reportElement x="440" y="100" width="95" height="20"/>
                <textElement>
                    <font fontName="Arial" size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{fechaEmision}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <detail>
        <band height="300">
            <!-- Información del cliente -->
            <rectangle>
                <reportElement x="0" y="20" width="535" height="100" backcolor="#f8f9fa"/>
                <graphicElement>
                    <pen lineWidth="1" lineColor="#ddd"/>
                </graphicElement>
            </rectangle>
            
            <staticText>
                <reportElement x="20" y="30" width="200" height="20"/>
                <textElement>
                    <font fontName="Arial" size="14" isBold="true"/>
                </textElement>
                <text><![CDATA[INFORMACIÓN DEL CLIENTE]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="20" y="60" width="60" height="15"/>
                <textElement>
                    <font fontName="Arial" size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Nombre:]]></text>
            </staticText>
            
            <textField>
                <reportElement x="90" y="60" width="200" height="15"/>
                <textElement>
                    <font fontName="Arial" size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{clienteNombre}]]></textFieldExpression>
            </textField>
            
            <staticText>
                <reportElement x="20" y="80" width="60" height="15"/>
                <textElement>
                    <font fontName="Arial" size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Email:]]></text>
            </staticText>
            
            <textField>
                <reportElement x="90" y="80" width="200" height="15"/>
                <textElement>
                    <font fontName="Arial" size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{clienteEmail}]]></textFieldExpression>
            </textField>
            
            <!-- Detalles de la reserva -->
            <rectangle>
                <reportElement x="0" y="140" width="535" height="120" backcolor="#ffffff"/>
                <graphicElement>
                    <pen lineWidth="1" lineColor="#ddd"/>
                </graphicElement>
            </rectangle>
            
            <staticText>
                <reportElement x="20" y="150" width="200" height="20"/>
                <textElement>
                    <font fontName="Arial" size="14" isBold="true"/>
                </textElement>
                <text><![CDATA[DETALLES DE LA RESERVA]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="20" y="180" width="60" height="15"/>
                <textElement>
                    <font fontName="Arial" size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Estado:]]></text>
            </staticText>
            
            <textField>
                <reportElement x="90" y="180" width="100" height="15"/>
                <textElement>
                    <font fontName="Arial" size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{estado}]]></textFieldExpression>
            </textField>
            
            <staticText>
                <reportElement x="20" y="200" width="60" height="15"/>
                <textElement>
                    <font fontName="Arial" size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Detalles:]]></text>
            </staticText>
            
            <textField isStretchWithOverflow="true">
                <reportElement x="90" y="200" width="400" height="30"/>
                <textElement>
                    <font fontName="Arial" size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{observaciones} != null ? $P{observaciones} : "Sin observaciones"]]></textFieldExpression>
            </textField>
            
            <!-- Total -->
            <rectangle>
                <reportElement x="350" y="180" width="165" height="40" backcolor="#7b1fa2"/>
                <graphicElement>
                    <pen lineWidth="0"/>
                </graphicElement>
            </rectangle>
            
            <staticText>
                <reportElement x="360" y="190" width="50" height="20" forecolor="#FFFFFF"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="Arial" size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[TOTAL:]]></text>
            </staticText>
            
            <textField>
                <reportElement x="420" y="190" width="85" height="20" forecolor="#FFFFFF"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font fontName="Arial" size="14" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{moneda} + " " + $P{total}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <pageFooter>
        <band height="50">
            <staticText>
                <reportElement x="0" y="20" width="535" height="15"/>
                <textElement textAlignment="Center">
                    <font fontName="Arial" size="8"/>
                </textElement>
                <text><![CDATA[Gracias por elegir Travel For U - Su agencia de viajes de confianza]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="0" y="35" width="535" height="10"/>
                <textElement textAlignment="Center">
                    <font fontName="Arial" size="7"/>
                </textElement>
                <text><![CDATA[www.travel4u.com | contacto@travel4u.com | +51 1 234-5678]]></text>
            </staticText>
        </band>
    </pageFooter>

</jasperReport>