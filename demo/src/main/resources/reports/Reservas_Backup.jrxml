<?xml version="1.0" encoding="UTF-8"?>
<!-- JasperReport compatible con JasperReports 6.21.0 -->
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="ReservasSimple"
              pageWidth="595"
              pageHeight="842"
              columnWidth="555"
              leftMargin="20"
              rightMargin="20"
              topMargin="20"
              bottomMargin="20">

    <parameter name="ID_USUARIO" class="java.lang.Long">
        <defaultValueExpression><![CDATA[1L]]></defaultValueExpression>
    </parameter>

    <parameter name="ESTADO_FILTRO" class="java.lang.String">
        <defaultValueExpression><![CDATA["%"]]></defaultValueExpression>
    </parameter>

    <queryString>
        <![CDATA[SELECT
            r.id_reserva,
            'TFU-' || TO_CHAR(r.fecha_reserva, 'YYYY') || '-' || LPAD(r.id_reserva::text, 4, '0') as codigo_reserva,
            r.fecha_reserva,
            r.fecha_inicio,
            r.fecha_fin,
            r.estado,
            r.total,
            COALESCE(r.moneda, 'PEN') as moneda,
            r.observaciones,
            u.nombres,
            u.apellidos,
            u.email
        FROM reserva r
        INNER JOIN usuarios u ON r.id_usuario = u.id_usuario
        WHERE r.id_usuario = $P{ID_USUARIO}
            AND r.estado LIKE $P{ESTADO_FILTRO}
        ORDER BY r.fecha_reserva DESC]]>
    </queryString>

    <field name="id_reserva" class="java.lang.Integer"/>
    <field name="codigo_reserva" class="java.lang.String"/>
    <field name="fecha_reserva" class="java.sql.Timestamp"/>
    <field name="fecha_inicio" class="java.sql.Timestamp"/>
    <field name="fecha_fin" class="java.sql.Timestamp"/>
    <field name="estado" class="java.lang.String"/>
    <field name="total" class="java.math.BigDecimal"/>
    <field name="moneda" class="java.lang.String"/>
    <field name="observaciones" class="java.lang.String"/>
    <field name="nombres" class="java.lang.String"/>
    <field name="apellidos" class="java.lang.String"/>
    <field name="email" class="java.lang.String"/>

    <title>
        <band height="100" splitType="Stretch">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="80" backcolor="#2C3E50"/>
                <graphicElement>
                    <pen lineWidth="0.0"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement x="20" y="20" width="300" height="40" forecolor="#FFFFFF"/>
                <textElement verticalAlignment="Middle">
                    <font size="28" isBold="true"/>
                </textElement>
                <text><![CDATA[Mis Reservas]]></text>
            </staticText>
            <staticText>
                <reportElement x="355" y="25" width="180" height="30" forecolor="#ECF0F1"/>
                <textElement verticalAlignment="Middle">
                    <font size="16"/>
                </textElement>
                <text><![CDATA[Travel For You]]></text>
            </staticText>
        </band>
    </title>

    <pageHeader>
        <band height="60" splitType="Stretch">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="45" backcolor="#ECF0F1"/>
                <graphicElement>
                    <pen lineWidth="0.0"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement x="20" y="8" width="60" height="15" forecolor="#000000"/>
                <textElement verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Cliente:]]></text>
            </staticText>
            <textField>
                <reportElement x="80" y="8" width="250" height="15"/>
                <textElement verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{nombres} + " " + $F{apellidos}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="20" y="25" width="60" height="15"/>
                <textElement verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Email:]]></text>
            </staticText>
            <textField>
                <reportElement x="80" y="25" width="250" height="15"/>
                <textElement verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{email}]]></textFieldExpression>
            </textField>
            <textField pattern="dd/MM/yyyy HH:mm">
                <reportElement x="380" y="15" width="160" height="15"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[new java.util.Date()]]></textFieldExpression>
            </textField>
        </band>
    </pageHeader>

    <columnHeader>
        <band height="35" splitType="Stretch">
            <staticText>
                <reportElement x="10" y="10" width="535" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Listado de Reservas]]></text>
            </staticText>
            <line>
                <reportElement x="0" y="32" width="555" height="1" forecolor="#E74C3C"/>
                <graphicElement>
                    <pen lineWidth="2.0"/>
                </graphicElement>
            </line>
        </band>
    </columnHeader>

    <detail>
        <band height="180" splitType="Stretch">
            <rectangle>
                <reportElement x="10" y="10" width="535" height="165" backcolor="#FFFFFF"/>
                <graphicElement>
                    <pen lineWidth="1.0" lineColor="#BDC3C7"/>
                </graphicElement>
            </rectangle>

            <!-- Encabezado de la tarjeta -->
            <rectangle>
                <reportElement mode="Opaque" x="10" y="10" width="535" height="35" backcolor="#34495E"/>
                <graphicElement>
                    <pen lineWidth="0.0"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement x="20" y="15" width="50" height="25" forecolor="#ECF0F1"/>
                <textElement verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Código:]]></text>
            </staticText>
            <textField>
                <reportElement x="70" y="15" width="150" height="25" forecolor="#E74C3C"/>
                <textElement verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{codigo_reserva}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="250" y="15" width="280" height="25" forecolor="#FFFFFF"/>
                <textElement verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Estado: " + $F{estado}.toUpperCase()]]></textFieldExpression>
            </textField>

            <!-- Contenido de la tarjeta -->
            <rectangle>
                <reportElement x="20" y="55" width="515" height="80" backcolor="#F8F9FA"/>
                <graphicElement>
                    <pen lineWidth="0.0"/>
                </graphicElement>
            </rectangle>

            <!-- Fecha de Reserva -->
            <staticText>
                <reportElement x="30" y="62" width="100" height="12" forecolor="#7F8C8D"/>
                <textElement>
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Fecha de Reserva:]]></text>
            </staticText>
            <textField pattern="dd/MM/yyyy HH:mm">
                <reportElement x="130" y="62" width="150" height="12"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{fecha_reserva}]]></textFieldExpression>
            </textField>

            <!-- Fecha de Viaje -->
            <staticText>
                <reportElement x="30" y="77" width="100" height="12" forecolor="#7F8C8D"/>
                <textElement>
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Fecha de Viaje:]]></text>
            </staticText>
            <textField pattern="dd/MM/yyyy" isBlankWhenNull="true">
                <reportElement x="130" y="77" width="150" height="12"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{fecha_inicio}]]></textFieldExpression>
            </textField>

            <!-- Hasta -->
            <staticText>
                <reportElement x="30" y="92" width="100" height="12" forecolor="#7F8C8D"/>
                <textElement>
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Hasta:]]></text>
            </staticText>
            <textField pattern="dd/MM/yyyy" isBlankWhenNull="true">
                <reportElement x="130" y="92" width="150" height="12"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{fecha_fin}]]></textFieldExpression>
            </textField>

            <!-- Total -->
            <staticText>
                <reportElement x="310" y="62" width="50" height="12" forecolor="#7F8C8D"/>
                <textElement>
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Total:]]></text>
            </staticText>
            <textField pattern="#,##0.00">
                <reportElement x="360" y="62" width="80" height="12" forecolor="#27AE60"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{moneda} + " " + $F{total}]]></textFieldExpression>
            </textField>

            <!-- Observaciones -->
            <staticText>
                <reportElement x="30" y="110" width="100" height="12" forecolor="#7F8C8D"/>
                <textElement>
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Observaciones:]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="130" y="110" width="390" height="20"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{observaciones}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <pageFooter>
        <band height="30" splitType="Stretch">
            <textField>
                <reportElement x="400" y="10" width="100" height="15"/>
                <textElement textAlignment="Right">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="20" y="10" width="300" height="15"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <text><![CDATA[Travel For You - Sistema de Reservas]]></text>
            </staticText>
        </band>
    </pageFooter>

    <summary>
        <band height="50" splitType="Stretch">
            <staticText>
                <reportElement x="20" y="15" width="515" height="25"/>
                <textElement textAlignment="Center">
                    <font size="9" isItalic="true"/>
                </textElement>
                <text><![CDATA[Gracias por confiar en Travel For You. ¡Buen viaje!]]></text>
            </staticText>
        </band>
    </summary>
</jasperReport>

